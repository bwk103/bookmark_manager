<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Bookmark Manager</title>
  </head>
  <body>

    <% if current_user %>
      <h1>Welcome, <%=@current_user.email %></h1>
    <% end %>

    <% if flash[:error] %>
      <div id="flash">
        <% flash[:error].each do |error| %>
          <div class="flash-warning">
            <%= error %>
          </div>
        <% end %>
      </div>
    <% end %>

    <%=yield %>
  </body>
</html>
